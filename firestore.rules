rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // --- PUBLIC ACCESS ---
    // Anyone can read from the products collection.
    // This is for the public-facing storefront.
    match /products/{productId} {
      allow get, list: if true;
    }

    // --- CLIENT (Authenticated Users) ACCESS ---
    
    // An authenticated user can read and update their OWN user document.
    match /users/{userId} {
      allow get, update: if request.auth.uid == userId;
      // Anyone can create a user document (for registration).
      allow create: if request.auth.uid != null;
    }

    // An authenticated user can read equipment documents where their userId matches.
    match /equipment/{equipmentId} {
      allow get, list: if request.auth.uid == resource.data.userId;
    }

    // An authenticated user can read payments where their userId matches.
    match /payments/{paymentId} {
      allow get, list: if request.auth.uid == resource.data.userId;
    }

    // Requests are handled by a secure backend flow, so client access is denied.
    match /requests/{requestId} {
      allow read, write: if false; 
    }

    // --- INTERNAL (Admin/Gestor) ACCESS ---
    // A function to check if the requesting user has an Admin or Gestor role.
    function isInternalUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Gestor'];
    }

    // Internal users can manage products.
    match /products/{productId} {
      allow write: if isInternalUser();
    }
    
    // Internal users can manage clients (all fields in the users collection).
    match /users/{userId} {
      allow list, delete: if isInternalUser();
    }
    
    // Internal users can manage all requests, equipment, and payments.
    match /requests/{docId} {
      allow read, write: if isInternalUser();
    }
     match /equipment/{docId} {
      allow read, write: if isInternalUser();
    }
     match /payments/{docId} {
      allow read, write: if isInternalUser();
    }
  }
}
