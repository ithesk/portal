
rules_version = '2';

// Apply rules to the 'alzadatos' database
service cloud.firestore {
  match /databases/alzadatos/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // PUBLIC: Allow anyone to read the list of published products
    match /products/{productId} {
      allow read: if true;
    }

    // USERS: Can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // REQUESTS: 
    // Logged-in users can create requests.
    // Reading requests is handled by the secure 'fetchRequestsFlow'.
    match /requests/{requestId} {
        allow create: if request.auth != null;
        allow read, write: if false; // Must be read via secure flow
    }
    
    // EQUIPMENT: 
    // Logged-in users can read their own equipment.
    // Creation/Update is handled by secure backend flows.
    match /equipment/{equipmentId} {
      allow create, update: if false; // Only backend can do this
      allow read: if request.auth.uid == resource.data.userId;
    }
    
     // PAYMENTS: 
    // Logged-in users can read their own payments.
    match /payments/{paymentId} {
       allow create: if request.auth != null;
       allow read: if request.auth.uid == resource.data.userId;
       allow write: if false;
    }
  }
}
