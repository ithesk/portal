rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isInternalUser() {
      // Checks if the signed-in user has the role of Admin or Gestor.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Gestor'];
    }

    function isOwner(userId) {
      // Checks if the signed-in user's ID matches the provided userId.
      return request.auth.uid == userId;
    }

    // === Public Access Rules ===
    match /products/{productId} {
      // Anyone can read (list or get) a product if its status is "Publicado".
      allow read: if resource.data.status == 'Publicado';
    }

    // === Client Access Rules (Authenticated Users) ===
    match /users/{userId} {
      // A user can get and update their own user document.
      allow get, update: if isOwner(userId);
    }

    match /requests/{requestId} {
      // A user can read (get/list) requests that belong to them.
      // The query from the client MUST include `where("userId", "==", request.auth.uid)`.
      allow read: if isOwner(resource.data.userId);
    }

    match /equipment/{equipmentId} {
      // A user can read (get/list) equipment that belongs to them.
      // The query from the client MUST include `where("userId", "==", request.auth.uid)`.
      allow read: if isOwner(resource.data.userId);
    }
    
    match /payments/{paymentId} {
      // A user can read (get/list) payments that belong to them.
      // The query from the client MUST include `where("userId", "==", request.auth.uid)`.
      allow read: if isOwner(resource.data.userId);
    }


    // === Internal Portal Rules (Admin/Gestor Roles) ===
    // These rules grant broad access to internal users for management purposes.
    match /users/{userId} {
      // Internal users can read any user's document.
      allow list, get: if isInternalUser();
    }
    
    match /requests/{requestId} {
      // Internal users can read and write any request document.
      allow read, write: if isInternalUser();
    }

    match /equipment/{equipmentId} {
      // Internal users can read and write any equipment document.
      allow read, write: if isInternalUser();
    }

    match /payments/{paymentId} {
       // Internal users can read and write any payment document.
      allow read, write: if isInternalUser();
    }

    match /products/{productId} {
      // Internal users can read and write any product document.
      allow read, write: if isInternalUser();
    }
    
     match /clients/{docId} {
      // This collection seems to be for internal use only.
      allow read, write: if isInternalUser();
    }
  }
}
