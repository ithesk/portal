
rules_version = '2';

service cloud.firestore {
  match /databases/alzadatos/documents {
    
    // Allow public read-only and list access to the products collection
    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null; // Example: only logged-in users can write
    }

    // Secure all other collections by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
