
rules_version = '2';

service cloud.firestore {
  // This rule applies to the default database
  match /databases/{database}/documents {
    
    // Default to locked down
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to the products collection
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Example: only auth users can write
    }
    
    // Allow users to read their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to read their own equipment and requests based on userId
    match /equipment/{equipmentId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

     // Allow reads on requests if the user's cedula matches
    match /requests/{requestId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.cedula == resource.data.cedula;
      allow write: if request.auth != null; // More restrictive write rules are needed for production
    }
     
    match /payments/{paymentId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
